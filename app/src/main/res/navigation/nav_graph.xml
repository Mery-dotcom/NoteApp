<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/noteFragment">

    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.geeks.noteapp.ui.fragments.onboard.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" />
    <fragment
        android:id="@+id/onBoardPagerFragment"
        android:name="com.geeks.noteapp.ui.fragments.onboard.OnBoardPagerFragment"
        android:label="fragment_on_board_pager"
        tools:layout="@layout/fragment_on_board_pager" />
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.geeks.noteapp.ui.fragments.note.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_noteFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popExitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"/>
        <action
            android:id="@+id/action_noteFragment_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_noteFragment_to_firstFolderFragment"
            app:destination="@id/firstFolderFragment" />
        <action
            android:id="@+id/action_noteFragment_to_secondFolderFragment"
            app:destination="@id/secondFolderFragment" />
        <action
            android:id="@+id/action_noteFragment_to_storeFragment"
            app:destination="@id/storeFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.geeks.noteapp.ui.fragments.note.NoteDetailFragment"
        android:label="fragment_note_detail"
        tools:layout="@layout/fragment_note_detail" >
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.geeks.noteapp.ui.fragments.signing.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.geeks.noteapp.ui.fragments.splashScreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_onBoardPagerFragment"
            app:destination="@id/onBoardPagerFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/storeFragment"
        android:name="com.geeks.noteapp.ui.fragments.store.StoreFragment"
        android:label="fragment_store"
        tools:layout="@layout/fragment_store" />
    <fragment
        android:id="@+id/firstFolderFragment"
        android:name="com.geeks.noteapp.ui.fragments.folders.FirstFolderFragment"
        android:label="fragment_first_folder"
        tools:layout="@layout/fragment_first_folder" />
    <fragment
        android:id="@+id/secondFolderFragment"
        android:name="com.geeks.noteapp.ui.fragments.folders.SecondFolderFragment"
        android:label="fragment_second_folder"
        tools:layout="@layout/fragment_second_folder" />
</navigation>