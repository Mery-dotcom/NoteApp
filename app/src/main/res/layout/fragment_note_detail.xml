<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    tools:context=".ui.fragments.note.NoteDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/note_detail_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="184dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:src="@drawable/btn_back"
            android:tint="@color/white"
            android:backgroundTint="#252525"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_marginTop="6dp"
            android:textColor="#CCFFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:layout_width="66dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/txt_time"
            android:textColor="#80FFFFFF"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/btn_choose_color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:layout_marginTop="4dp"
        android:backgroundTint="#252525"
        android:src="@drawable/choose_color"
        app:layout_constraintTop_toTopOf="@id/btn_add"
        app:layout_constraintEnd_toStartOf="@id/btn_add"/>

    <LinearLayout
        android:id="@+id/colorPickerContainer"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_choose_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поменять цвет"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <View
                android:id="@+id/colorYellow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#F6E360"
                android:layout_margin="4dp"
                android:clickable="true" />

            <View
                android:id="@+id/colorPurple"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#DD68EF"
                android:layout_margin="4dp"
                android:clickable="true" />

            <View
                android:id="@+id/colorPink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ED5A8A"
                android:layout_margin="4dp"
                android:clickable="true" />

            <View
                android:id="@+id/colorRed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#E26259"
                android:layout_margin="4dp"
                android:clickable="true" />

            <View
                android:id="@+id/colorGreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#67BF6B"
                android:layout_margin="4dp"
                android:clickable="true" />

            <View
                android:id="@+id/colorBlue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#51A7EB"
                android:layout_margin="4dp"
                android:clickable="true" />
        </GridLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#E9B45F"
        android:backgroundTint="#252525"
        android:text="Готово"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_title"
        android:background="@android:color/transparent"
        android:lineHeight="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="22dp"
        android:textSize="24sp"
        android:textColor="#B3FFFFFF"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/note_detail_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_description"
        android:background="@android:color/transparent"
        android:lineHeight="18dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="22dp"
        android:textSize="12sp"
        android:textColor="#B3FFFFFF"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        android:layout_width="match_parent"
        android:layout_height="302dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>