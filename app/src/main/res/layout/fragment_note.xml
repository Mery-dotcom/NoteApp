<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    tools:context=".ui.fragments.note.NoteFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/title"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="Все заметки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_menu"
            android:src="@drawable/ic_menu"
            android:backgroundTint="#252525"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_variations"
            android:src="@drawable/variations"
            android:backgroundTint="#252525"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_search"
        android:drawableTint="#7FFFFFFF"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/search"
        android:background="@drawable/rounded_edit_text"
        android:hint="Поиск заметок"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="340dp"
        android:layout_height="48dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_add"
        app:icon="@drawable/add"
        style="@style/Add.Button"
        android:backgroundTint="#D88B02"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/store"
        android:backgroundTint="#D7D4D4"
        style="@style/Add.Button"
        android:text="Store"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>