<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    android:paddingHorizontal="16dp"
    tools:context=".ui.fragments.folders.FirstFolderFragment">

    <TextView
        android:id="@+id/folders"
        android:layout_marginTop="14dp"
        android:textSize="18sp"
        android:text="Папки"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/all_notes"
        style="@drawable/search"
        android:backgroundTint="#353535"
        android:text="Все заметки"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/folders"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/deleted"
        style="@drawable/search"
        android:backgroundTint="#353535"
        android:text="Недавно удаленные"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/all_notes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>